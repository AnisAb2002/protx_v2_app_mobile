<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:paddingVertical="15dp"
    android:background="@drawable/rounded_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageProduit"
        android:layout_width="170dp"
        android:layout_height="210dp"
        android:contentDescription="@string/produit_image"
        android:src="@drawable/solidmass1500g"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/nomProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/produit_nom"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="7dp"
            android:textColor="@color/grey" />
        <TextView
            android:id="@+id/poidsProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey" />
        <TextView
            android:id="@+id/categorieProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/grey" />
        <TextView
            android:id="@+id/prixProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:id="@+id/btnApercu"
            android:layout_marginHorizontal="2dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="@string/apercu"/>
    </LinearLayout>
</LinearLayout>