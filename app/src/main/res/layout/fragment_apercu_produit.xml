<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="UselessParent"
        android:id="@+id/layout_up">
        <ImageButton
            android:id="@+id/retourBouton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/bouton_retourner"
            app:srcCompat="@drawable/arrow_back"
            app:tint="@color/white"
            android:backgroundTint="@color/grey"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomProduitApercu"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/rounded_bg"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp">

                <ImageView
                    android:id="@+id/imageProduitApercu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/solidmass5000g"
                    android:contentDescription="@string/produit_image" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="40dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />

                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/prix"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/prixProduitApercu"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/categorie"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/categorieProduitApercu"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/format"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/poidsProduitApercu"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Aide_assistance_paragraphe"
                        android:justificationMode="inter_word"
                        android:id="@+id/descriptionProduitApercu"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/portion"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:justificationMode="inter_word"
                        android:id="@+id/portionProduitApercu"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:text="@string/composition"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Aide_assistance_paragraphe"
                        android:justificationMode="inter_word"
                        android:id="@+id/compositionProduitApercu"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <ImageView
                    android:layout_width="match_parent"
                    android:alpha="0.3"
                    android:layout_height="1dp"
                    android:background="@drawable/rounded_bg"
                    android:contentDescription="@string/bare" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:id="@+id/diminuerQntButton"
                        android:layout_marginHorizontal="4dp"
                        android:textColor="@color/grey"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:text="@string/moins"
                        android:labelFor="@+id/quantiteEditText"/>

                    <EditText
                        android:id="@+id/quantiteEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="0"
                        android:layout_weight="1"
                        android:background="@color/lightGrey"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:inputType="number"
                        android:textColor="@color/white"/>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_weight="1"
                        android:id="@+id/ajouterQntButton"
                        android:layout_marginHorizontal="4dp"
                        android:textColor="@color/grey"
                        android:textSize="13sp"
                        android:text="@string/plus"/>


                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:backgroundTint="@color/white"
                        android:id="@+id/ajouterPanierButton"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:text="@string/ajouter_au_panier"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
