<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recherche"
    android:background="@color/grey">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="UselessParent"
        android:id="@+id/layout_up">

        <ImageButton
            android:id="@+id/retourBouton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/bouton_retourner"
            app:srcCompat="@drawable/arrow_back"
            app:tint="@color/white"
            android:backgroundTint="@color/grey"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rechercher"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutRecherche"
        android:layout_below="@id/layout_up">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            tools:ignore="UselessParent"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/rechercheEditText"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:ems="12"
                android:autofillHints="Recherche"
                android:textColor="@color/white"
                android:inputType="text"
                android:layout_marginEnd="15dp"/>
            <ImageButton
                android:labelFor="@+id/rechercheEditText"
                android:id="@+id/rechercheBouton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/recherchebouton"
                app:srcCompat="@drawable/search_24"
                app:tint="@color/white"
                android:backgroundTint="@color/grey"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutRecherche"
        android:paddingBottom="30dp"
        android:contentDescription="@string/produits">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/produits_container"
            android:orientation="vertical"
            android:padding="10dp">

        </LinearLayout>
    </ScrollView>


</RelativeLayout>